<% include header.ejs %>
  <body>
    <table>
      <tr>
        <th>id</th>
        <th>title</th>
        <th>description</th>
        <th>price</th>
        <th>stock</th>
      </tr>
      <tbody>
        <% records.forEach((record) => { %>
          <tr>
            <td><%= record.id %></td>
            <td><%= record.title %></td>
            <td><%= record.description %></td>
            <td><%= record.price %></td>
            <td><%= record.stock %></td>
            <td><a href="/edit/<%= record.id %>"> [ Edit ]</a></td>
          </tr>
        <% }) %>
      </tbody>
      </table>
  </body>
</html>
