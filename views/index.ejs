<% include header.ejs %>

    <nav class="navbar navbar-dark bg-dark">
        <ul class="nav nav-pills nav-fill">
            <li class="nav-item">
              <a class="nav-link active" href="/">Schedule</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/add-record">Add appointment</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/add-customer">Add customer</a>
            </li>
            <li class="nav-item">
              <a class="nav-link disabled" href="#">Settings</a>
            </li>
          </ul>
    </nav>

<body>
  <div class="container">
    <div class="row">

      <div class="col-lg-12">
        <table class="table table-hover">
          <tr>
            <th>id</th>
            <th>title</th>
            <th>description</th>
            <th>price</th>
            <th>stock</th>
          </tr>
          <tbody>
            <% records.forEach((record) => { %>
            <tr>
              <td><%= record.id %></td>
              <td><%= record.title %></td>
              <td><%= record.description %></td>
              <td><%= record.price %></td>
              <td><%= record.stock %></td>
              <td><a class="btn btn-primary edit-button" href="/edit-record/<%= record.id %>">Edit</a></td>
              <td><a class="btn btn-danger delete-button" href="/delete-record/<%= record.id %>">Delete</a></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

    </div>
    <div class="row">
      <div class="col-lg-12">
        <table class="table table-hover">
          <tr>
            <th>id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Age</th>
          </tr>
          <tbody>
            <% customers.forEach((customer) => { %>
            <tr>
              <td><%= customer.id %></td>
              <td><%= customer.fname %></td>
              <td><%= customer.lname %></td>
              <td><%= customer.age %></td>
              <td><a class="btn btn-primary edit-button" href="/edit-customer/<%= customer.id %>">Edit</a></td>
              <td><a class="btn btn-danger delete-button" href="/delete-customer/<%= customer.id %>">Delete</a></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>

</html>